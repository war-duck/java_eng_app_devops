<!--<?import javafx.scene.layout.VBox?>-->
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<VBox spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.SingleChoiceTaskController" stylesheets="@styles.css">
   <VBox alignment="TOP_RIGHT" prefWidth="50" prefHeight="50">
      <Button onAction="#goBack" styleClass="XButton" />
      <padding>
         <Insets bottom="10" left="10" right="10" top="10" />
      </padding>
   </VBox>
   <VBox fx:id="taskElements" alignment="CENTER">
      <children>
         <VBox alignment="CENTER" spacing="15.0">
            <children>
               <Label text="Jednokrotny wybór" styleClass="StandardLabel"/>
               <Label fx:id="questionContent" text="ERROR:nie można wczytać treści" styleClass="StandardLabel, MainLabel" />
            </children>
         </VBox>
         <GridPane fx:id="buttonGrid" alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
            <children>
               <Button fx:id="buttonA" text="A" GridPane.columnIndex="0" GridPane.rowIndex="0" onAction="#handleAnswerButtonPressed" styleClass="StandardButton, OptionButton"/>
               <Button fx:id="buttonB" text="B" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#handleAnswerButtonPressed" styleClass="StandardButton, OptionButton"/>
               <Button fx:id="buttonC" text="C" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#handleAnswerButtonPressed" styleClass="StandardButton, OptionButton"/>
               <Button fx:id="buttonD" text="D" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#handleAnswerButtonPressed" styleClass="StandardButton, OptionButton"/>
            </children>
         </GridPane>
      </children>
   </VBox>
   <VBox alignment="CENTER"> <!-- VBox z elementami podpowiedzi -->
      <children>
         <Button fx:id="hintButton" text="PODPOWIEDŹ" onAction="#handleHintButtonPressed" styleClass="StandardButton, BiggerButton, YellowElement" />
         <Label fx:id="hintLabel" text="ERROR:Nie można wczytać podpowiedzi" styleClass="StandardLabel, HighVisLabel" visible="false"/>
      </children>
   </VBox>
   <VBox alignment="CENTER">
      <Label fx:id="taskResult" styleClass="StandardLabel, HighVisLabel" visible="false"/>
   </VBox>
</VBox>