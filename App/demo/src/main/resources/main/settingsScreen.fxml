<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.SettingsScreenController" stylesheets="@styles.css">
    <children>
        <Label text="Wybierz poziom trudności" styleClass="StandardLabel" />
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="easyButton"  text="Łatwy" onAction="#selectDifficulty" styleClass="StandardButton" />
            <Button fx:id="mediumButton" text="Średni" onAction="#selectDifficulty" styleClass="StandardButton" />
            <Button fx:id="hardButton" text="Trudny" onAction="#selectDifficulty" styleClass="StandardButton" />
        </HBox>
        <Button text="Powrót" onAction="#goBack" styleClass="StandardButton" />
    </children>
</VBox>