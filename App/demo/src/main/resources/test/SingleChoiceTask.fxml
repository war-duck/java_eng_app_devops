<?xml version="1.0" encoding="UTF-8"?>

<!--<?import javafx.scene.layout.VBox?>-->
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="test.SingleChoiceTaskController">
   <VBox fx:id="taskElements">
      <children>
         <VBox alignment="CENTER" spacing="15.0">
            <children>
               <Label text="Jednokrotny wybór" style="-fx-font-size: 14px;"/>
               <Label fx:id="questionContent" text="ERROR:nie można wczytać treści" style="-fx-font-weight: bold; -fx-font-size: 20px;"/>
            </children>
         </VBox>
         <GridPane fx:id="buttonGrid" alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
            <children>
               <Button fx:id="buttonA" text="A" GridPane.columnIndex="0" GridPane.rowIndex="0" onAction="#handleAnswerButtonPressed" style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 5px; -fx-min-width: 100px; -fx-min-height: 30px;"/>
               <Button fx:id="buttonB" text="B" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#handleAnswerButtonPressed" style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 5px; -fx-min-width: 100px; -fx-min-height: 30px;"/>
               <Button fx:id="buttonC" text="C" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#handleAnswerButtonPressed" style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 5px; -fx-min-width: 100px; -fx-min-height: 30px;"/>
               <Button fx:id="buttonD" text="D" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#handleAnswerButtonPressed" style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 5px; -fx-min-width: 100px; -fx-min-height: 30px;"/>
            </children>
         </GridPane>
      </children>
   </VBox>
   <VBox alignment="CENTER"> <!-- VBox z elementami podpowiedzi -->
      <children>
         <Button fx:id="hintButton" text="PODPOWIEDŹ" onAction="#handleHintButtonPressed" style="-fx-background-color: #FFF000; -fx-border-color: black; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-min-width: 150px; -fx-min-height: 60px;"/>
         <Label fx:id="hintLabel" text="ERROR:Nie można wczytać podpowiedzi" style="-fx-background-color: #D8D8D8; -fx-border-radius: 5px; -fx-font-style: italic; -fx-background-radius: 5px; -fx-font-size: 20px" visible="false"/>
      </children>
   </VBox>
   <Label fx:id="taskResult" style="-fx-background-color: green; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 20px" visible="false"/>
</VBox>