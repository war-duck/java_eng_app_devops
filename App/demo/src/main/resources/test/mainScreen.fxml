<!--<?import javafx.scene.layout.VBox?>-->
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="test.MainScreenController" stylesheets="@styles.css">
    <HBox alignment="TOP_RIGHT" spacing="0">
        <Button fx:id="settingsButton" onAction="#openSettings" styleClass="SettingsButton"/>
    </HBox>
    <children>
        <Label fx:id="Menu" text="MENU" styleClass="PageTitle" />
        <Button fx:id="exerciseButton" text="ĆWICZ" onAction="#startExercise" styleClass="StandardButton, BiggerButton, GreenElement" /> <!--trzeba stworzyć metodę w kontrolerze która wylosuje zadanie i przełączy widok na SingleChoiceTask-->
        <Button fx:id="Ranking" text="Ranking" onAction="#openRanking" styleClass="StandardButton" /> <!--trzeba stworzyć metodę w kontrolerze która wylosuje zadanie i przełączy widok na SingleChoiceTask-->
        <HBox alignment="BOTTOM_RIGHT" spacing="0">
            <Button fx:id="friendsButton" onAction="#openFriends" styleClass="FriendsButton" />
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
